{
    "SchemaVersion": "0.2",
    "Runtime": "docker",
    "RuntimeOptions": {
        "ContainerImage": "ia_visualizer:$EIS_VERSION",
        "Privileged": true,
        "TemporaryVolumes": [
            "/tmp/.X11-unix:/tmp/.X11-unix",
            "$EIS_INSTALL_PATH/saved_images:$EIS_INSTALL_PATH/saved_images"
        ]
    },
    "DataStore": {
        "Protocol": "DIRECT",
        "DataBuckets": [
            {
                "Name": "EIS/Visualizer",
                "Permissions": "RO"
            },
            {
                "Name": "EIS/GlobalEnv",
                "Permissions": "RO"
            },
            {
                "Name": "EIS/Publickeys",
                "Permissions": "RO"
            }
        ]
    }
}